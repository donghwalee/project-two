<div class="container">
  <div class="row">

    <div class="col-md-12 link-area">
      <a href="/topics">Back to all topics</a>
      <hr>
    </div>

    <div class="col-md-12 topic-top-area">
        Enter a new topic for: <strong><%= currentuser %></strong>
    </div>

    <hr>

    <div class="col-md-12 new-content-area">
      <form class="" action="/topics" method="post">
        <input  type="text"
                name="topic[title]"
                placeholder="title of topic">
                <br />
        <input  type="text"
                name="topic[description]"
                placeholder="description of topic, limit 500 characters">
                <br />
        <input  type="text"
                name="topic[comments]"
                placeholder="comments, comma separated">
                <br />
        <input  type="Number"
                name="topic[likes]"
                placeholder="number of likes">
                <br />
        <input type="submit">
      </form>
    </div>
