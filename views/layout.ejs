<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>JAKE's FORUM</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="/app.css" media="screen" title="no title" charset="utf-8">
    <link href='https://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  </head>

  <nav class="navbar navbar-default navbar-fixed-top">
      <a class="navbar-brand" id="brand" href="/topics"><img src="/jake_logo_v1_small.png"></a>
      <div id="menu-wrapper" class="closed">
      <ul id="menu">
        <% if (currentuser) { %>
        <li><a href="/logout">LOGOUT</a></li>
        <% } else { %>
        <li><a href="/login">LOGIN</a></li>
        <% }; %>
        <li><a href="/topics">TOPICS</a></li>
        <li><a href="https://github.com/donghwalee/project-two" target="_blank">GITHUB</a></li>
      </ul>
    </div>

    <div id="hamburger-wrapper" class="closed">
      <div id="hamburger-button">
        <span></span>
        <span></span>
        <span></span>
        MENU
      </div>
    </div>
  </nav>

  <body>

    <div class="container">
      <% if (currentuser) { %>
        <div class="row">
          <div class="login-status">You are currently logged in as: <span><strong><%= currentuser %></strong> |
            <form class="logout-button"
                  action="/logout"
                  method="post">
               <button type="submit" class="btn-xs btn-warning" id="logout-button">
                 Logout
               </button>
            </form></span>
          </div>
        <% } else { %>
          <div class="login-status">You are not logged in, please <a href="/login">log in</a> or <a href="/register">register</a></div>
        <% }; %>
      </div>
    </div>

    <%- body %>

    <script src="/app.js"></script>

  </body>
</html>
